  <body>
    <div class="container post-form">
      <div class="wrapper">
        <section class="post">
          <header>Tạo bài viết</header>
          <form >
            <div class="content">
              <div class="details">
                <p></p>
              </div>
            </div>
            <textarea placeholder="What's on your mind?" spellcheck="false" required></textarea>
            <button>Post</button>
          </form>
        </section>
      </div>
    </div>
    {{#each posts}}
    <div id="post-{{@index}}" class="container single-post">
      <div class="wrapper" style="float: left;">
        <ul class="post-actions">
            <li style="color: #0051ff;">Chỉnh sửa</li>
            <li style="color: red;">Xóa</li>
          </ul>
        <section class="post">
          <header>Bài viết</header>
          <div class="content">
            <div class="details">
              <p>{{this.content}}</p>
            </div>
          </div>
        </section>
        <section class="comment-form">
          <header>Bình luận</header>
          <form action="#">
            <textarea placeholder="Viết bình luận..." spellcheck="false" required></textarea>
          </form>
        </section>
      
      </div>
      <div style="clear: both;"></div>
      {{#if this.comments}}
      <ul class="comment-list">
        {{#each this.comments}}
        <li>{{this}}</li>
        {{/each}}
      </ul>

      {{/if}}
    </div>
        
    {{/each}}
